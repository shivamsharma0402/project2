<%- include('../includes/head.ejs') %>
    </nav>
    <style>
    .invalid{
      border: solid 1px red; 
      box-shadow: 0 0 0.5rem red;
    }
    .main-login {
        border: solid 1px rebeccapurple; 
        box-shadow: 0 0 1rem rebeccapurple;
        width: 450px;
        align-items: center;
        align-content: center;
        margin-top: 20px;
        border-radius: 15px;
        /* height: 320px; */
      }
    </style>
    <main class="mx-auto mt-5 main-login">
      <form action="/reset/" method="POST">
          <div class="mx-auto mt-3 mb-2" style="width: 400px;">
          Reset Password for <b><u><%= email%></u></b>
        <div class="input-group mb-3">
          <input type="password" class=" mt-3 form-control <%= validationErrors.find(e=> e.param === 'password') ? 'invalid' : '' %> " name="password" placeholder="Enter password"  aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
        </div>
        <div class="input-group mb-3">
          <input type="hidden" name="userId" value="<%=userId%>">
          <input type="hidden" name="passwordToken" value="<%=passwordToken%>">
          <input type="password" class=" mt-2 form-control <%= validationErrors.find(e=> e.param === 'confirmPassword') ? 'invalid' : '' %> " name="confirmPassword" placeholder="Confirm password"  aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
        </div>
        <% if(errorMessage) { %>
          <div class="input-group mb-3" style="align-items: center;">
            <p style="color: red; width: 100%; border: 1px solid rgb(241, 109, 109); border-radius: 5px; text-align: center; background-color: rgb(255, 176, 176)"><%= errorMessage %></p>
            <!-- <input type="password" class=" mt-2 form-control" name="password" placeholder="Enter password"  aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default"> -->
          </div>
          <% } %>

          <div class="input-group mt-1 mb-3">
            <button type="submit" class="btn btn-primary mt-3 mb-2" style="margin: auto;" >Reset Password</button>
          </div>

          </div>
      </form>
    </main>
    <%- include('../includes/end.ejs') %>